/* pages/wenda1/wenda1.wxss */
page {
  background: #f6f7f8;
}

.question-form {
  margin: 25rpx;
}

.question-input-area {
 
  border: 1rpx solid #f2f2f2;
  border-radius: 4rpx;
}

.question-title-wrap {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  margin: 10rpx 30rpx;
  padding: 20rpx 0;
}

.question-title {
  flex: 1;
}

.weui-textarea-counter, .title-input-counter {
  color: #b3b3b3;
  font-size: 14px;
  padding-left: 10rpx;
}
.weui-textarea{
  font-size: 14px;
}
.weui-cell::before, .weui-cells::before, .weui-cell::after, .weui-cells::after {
  border: none;
}

.question-images-area {
  padding: 40rpx 0;
}

.question-images-tool {
  display: flex;
  align-items: center;
}
.weui-cell{
  background-color: #fff;
}
.weui-btn{
  margin-top: 15px;
}